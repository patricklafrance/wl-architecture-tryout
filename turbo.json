{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": ["USE_MSW", "MODULES"],
    // Defined for smoke tests.
    // "globalPassThroughEnv": [
    //     "SAMPLE_JS_URL",
    //     "SAMPLE_REACT_URL",
    //     "SAMPLE_SQUIDE_HOST_URL"
    // ],
    "ui": "tui",
    "tasks": {
        "dev": {
            "dependsOn": ["^dev"],
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "build-storybook": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", "storybook-static/**"],
            "cache": false
        },
        "serve-build": {
            "dependsOn": ["build"],
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": ["eslint", "//#eslint", "stylelint", "typecheck", "//#typecheck", "//#syncpack"]
        },
        "//#eslint": {
            "outputs": ["node_modules/.cache/eslint"]
        },
        "eslint": {
            "outputs": ["node_modules/.cache/eslint"]
        },
        "stylelint": {
            "outputs": ["node_modules/.cache/stylelint"]
        },
        "//#typecheck": {
            "outputs": ["node_modules/.cache/tsbuildinfo.json"]
        },
        "typecheck": {
            "outputs": ["node_modules/.cache/tsbuildinfo.json"]
        },
        "//#syncpack": {},
        "test": {
            "outputs": ["node_modules/.cache/vitest/**"]
        },
        "install-playwright": {
            "outputs": [".playwright"]
        }
        // "smoke-test-local": {
        //     "dependsOn": [
        //         "@samples/js#build-preview",
        //         "@samples/react#build-preview",
        //         "@samples/squide-host#build-preview",
        //         "install-playwright"
        //     ]
        // },
        // "smoke-test-local-ui": {
        //     "dependsOn": [
        //         "@samples/js#build-preview",
        //         "@samples/react#build-preview",
        //         "@samples/squide-host#build-preview",
        //         "install-playwright"
        //     ]
        // },
        // "smoke-test-prod": {
        //     "dependsOn": ["install-playwright"]
        // },
        // "smoke-test-preview": {
        //     "dependsOn": ["install-playwright"]
        // }
    }
}
