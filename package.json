{
    "name": "workspace-root",
    "description": "Workspace root.",
    "version": "0.0.0",
    "author": "Workleap",
    "private": true,
    "type": "module",
    "license": "Apache-2.0",
    "scripts": {
        "dev-host": "turbo run dev --filter=@apps/host",
        "dev-host-msw": "cross-env USE_MSW=true pnpm dev-host",
        "dev-management": "cross-env MODULES=management pnpm dev-host",
        "dev-management-msw": "cross-env USE_MSW=true MODULES=management pnpm dev-host",
        "dev-migration": "cross-env MODULES=migration pnpm dev-host",
        "dev-migration-msw": "cross-env USE_MSW=true MODULES=migration pnpm dev-host",
        "dev-storybook": "turbo run dev --filter=@apps/storybook",
        "build-host": "turbo run build --filter=@apps/host",
        "build-storybook": "turbo run build-storybook --",
        "serve-host": "turbo run serve-build --filter=@apps/host",
        "serve-storybook": "turbo run serve-build --filter=@apps/storybook",
        "lint": "turbo run lint --continue",
        "eslint": "eslint . --max-warnings=0 --cache --cache-location node_modules/.cache/eslint",
        "typecheck": "tsc",
        "syncpack": "syncpack lint",
        "smoke-test-local": "turbo run smoke-test-local --filter=smoke-tests",
        "smoke-test-local-ui": "turbo run smoke-test-local-ui --filter=smoke-tests",
        "smoke-test-prod": "turbo run smoke-test-prod --filter=smoke-tests",
        "smoke-test-preview": "turbo run smoke-test-preview --filter=smoke-tests",
        "clean": "pnpm -r --parallel --include-workspace-root exec pnpm dlx rimraf dist storybook-static .turbo .playwright .rslib node_modules/.cache",
        "reset": "pnpm run --sequential \"/^reset:.*/\"",
        "reset:clean": "pnpm clean",
        "reset:delete-node-modules": "pnpm -r --parallel --include-workspace-root exec pnpm dlx rimraf node_modules pnpm-lock.yaml",
        "list-outdated-deps": "pnpm outdated -r --format list",
        "update-outdated-deps": "pnpm run --sequential \"/^update-outdated-deps:.*/\"",
        "update-outdated-deps:update-versions": "pnpm update -r --latest",
        "update-outdated-deps:update-peers": "syncpack fix-mismatches"
    },
    "devDependencies": {
        "@eslint/js": "9.38.0",
        "@types/node": "24.9.2",
        "@typescript-eslint/parser": "8.46.2",
        "@workleap/eslint-configs": "1.1.5",
        "@workleap/typescript-configs": "3.0.7",
        "cross-env": "10.1.0",
        "eslint": "9.38.0",
        "netlify-cli": "23.9.5",
        "syncpack": "13.0.4",
        "turbo": "2.5.8",
        "typescript": "5.9.3",
        "typescript-eslint": "8.46.2"
    },
    "engines": {
        "node": ">=24.0.0",
        "pnpm": ">=10"
    },
    "packageManager": "pnpm@10.20.0"
}
